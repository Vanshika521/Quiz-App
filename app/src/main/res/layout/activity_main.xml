<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="70dp"
    android:background="@color/white"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Coding"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:textSize="30sp"
            android:fontFamily="@font/li"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageview"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Let's Get Started"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageview"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            />

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView"
            android:src="@drawable/coding"
           />

        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview"
            >

            <androidx.cardview.widget.CardView
                android:onClick="C"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/C"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="C"
                        android:textSize="24sp"
                        android:fontFamily="@font/li"
                        />

                <ImageView
                    android:id="@+id/C"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal = "true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/c"
                    />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:onClick="c_plusplus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/C_plusplus"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="10dp"
                        android:text="C++"
                        android:textSize="24sp"
                        android:fontFamily="@font/li"
                        />

                    <ImageView
                        android:id="@+id/C_plusplus"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/c_plusplus"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearlayout"
            >

            <androidx.cardview.widget.CardView
                android:onClick="JAVA"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/java"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="JAVA"
                        android:textSize="24sp"
                        android:fontFamily="@font/li"
                        />

                    <ImageView
                        android:id="@+id/java"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/java"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:onClick="Python"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/python"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="10dp"
                        android:text="PYTHON"
                        android:textSize="24sp"
                        android:fontFamily="@font/li"
                        />

                    <ImageView
                        android:id="@+id/python"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/python"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <LinearLayout
            android:id="@+id/linearlayout3"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearlayout2"
            >

            <androidx.cardview.widget.CardView
                android:onClick="Kotlin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/kotlin"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="KOTLIN"
                        android:textSize="24sp"
                        android:fontFamily="@font/li"
                        />

                    <ImageView
                        android:id="@+id/kotlin"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/kotlin"
                        />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:onClick="HTML"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/html"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="10dp"
                        android:text="HTML"
                        android:textSize="24sp"
                        android:fontFamily="@font/li"
                        />

                    <ImageView
                        android:id="@+id/html"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal = "true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/html"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>